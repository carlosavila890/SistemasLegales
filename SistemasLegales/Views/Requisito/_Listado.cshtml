@model IEnumerable<Requisito>

<table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap dataTable" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IdOrganismoControl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IdRequisitoLegal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IdDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IdCiudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IdProceso)
            </th>
            <th>
                Estado
            </th>
            @{ 
                if (User.Identity.Name == Perfiles.Gestor)
                {
                    <th>
                        Opciones
                    </th>
                }
            }
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrganismoControl.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequisitoLegal.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Documento.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ciudad.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proceso.Nombre)
                    </td>
                    <td>
                        @{await Html.RenderPartialAsync("_Badge", item);}
                    </td>
                    @{ 
                        if (User.Identity.Name == Perfiles.Gestor)
                        {
                            <td>
                                <a asp-action="Gestionar" asp-route-id="@item.IdRequisito">Editar</a> |
                                <a href="javascript:void(0);" class="btnEliminar" id="@item.IdRequisito" onclick="MiApp.Datatables.eventoBtnEliminar(this)" data-descripcion="&#191;Desea eliminar el Requisito... ?">Eliminar</a>
                            </td>
                        }
                    }
                </tr>
            }
        }
    </tbody>
</table>
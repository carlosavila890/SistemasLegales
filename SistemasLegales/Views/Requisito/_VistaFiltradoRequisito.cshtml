@model Requisito

<div class="row">
    <div class="col-sm-12 col-md-4 col-xs-12 col-lg-4">
        <div class="form-group">
            <div class="input-group margin-bottom-0">
                <label asp-for="Documento.RequisitoLegal.IdOrganismoControl"></label>
                <select id="IdOrganismoControl" class="form-control show-tick" data-live-search="true" asp-items="ViewBag.OrganismoControl"></select>
            </div>
        </div>
    </div>

    <div class="col-sm-12 col-md-4 col-xs-12 col-lg-4">
        <div class="form-group">
            <div class="input-group margin-bottom-0">
                <label asp-for="IdActorResponsableGestSeg"></label>
                <select id="IdActorResponsableGestSeg" class="form-control show-tick" data-live-search="true" asp-items="ViewBag.Actor"></select>
            </div>
        </div>
    </div>

    <div class="col-sm-12 col-md-4 col-xs-12 col-lg-4">
        <div class="form-group">
            <label asp-for="Anno"></label>
            <div class="input-group margin-bottom-0 focused">
                <input type="text" asp-for="Anno" class="form-control datepickerYear" />
                <span class="input-group-addon bg btndatepicker" data-picker="Anno"><i class="fa fa-calendar"></i></span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-9 col-md-10 col-xs-12 col-lg-10">
        <label>Seleccione un estado:</label>
        <div class="form-group">
            <a href="javascript: void(0);" class="label label-success margin-right-10 semaforo" data-semaforo="1" style="padding:0.80em .6em !important;">
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <em class="material-icons" id="semaforo1" style="position:relative;top:8px;"></em>
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            </a>
            <a href="javascript: void(0);" class="label bg-yellow margin-right-10 semaforo" data-semaforo="2" style="padding:0.80em .6em !important;">
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <em class="material-icons" id="semaforo2" style="position:relative;top:8px;"></em>
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            </a>
            <a href="javascript: void(0);" class="label label-danger margin-right-10 semaforo" data-semaforo="3" style="padding:0.80em .6em !important;">
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <em class="material-icons" id="semaforo3" style="position:relative;top:8px;">check</em>
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            </a>
        </div>
    </div>

    <div class="col-sm-3 col-md-2 col-xs-12 col-lg-2">
        <label>&nbsp;</label>
        <div class="form-group">
            <a href="javascript: void(0);" class="btn btn-success waves-effect pull-right">
                <i class="material-icons">description</i> REPORTE
            </a>
        </div>
    </div>
</div>